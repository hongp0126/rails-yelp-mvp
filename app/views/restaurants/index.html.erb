<h1>All our restaurants</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th class="info">Name</th>
      <th class="warning">Adress</th>
      <th class="danger">Category</th>
      <th class="active">Phone Number</th>
      <th class="success">Other options</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.category %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= link_to "Show", restaurant_path(restaurant) %>|<%= link_to "Edit", edit_restaurant_path(restaurant) %>|<%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4><%= link_to "New restaurant", new_restaurant_path %></h4>
